{
	"references": [
		{ "path": "../mimcss" },
		{ "path": "../mimbl" },
		{ "path": "../mimurl" }
	],
	"compilerOptions": {
		"composite": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"experimentalDecorators": true,
		"preserveConstEnums": false,
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "ES2017",
		"lib": [ "ES2017", "dom" ],
		"rootDir": "src",
		"outDir": "./lib/",
		"jsx": "react",
		"jsxFactory": "mim.jsx",
	},

	"include": [
		"./src/**/*"
	]
}